<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">
		
	<!--  DB  -->
	<bean id="dataSourceBean" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
        <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
        <property name="username" value="trip" />
        <property name="password" value="trip" /> 
    </bean>
       	
 	<bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
  		<property name="dataSource" ref="dataSourceBean" />
  		<property name="mapperLocations">
	  		<list>
		        <!--<value>classpath:guestModel/GuestMapper.xml</value>
		       
		        <value>classpath:memberModel/MemberMapper.xml</value>
		        <value>classpath:fileBoardModel/BoardMapper.xml</value>-->
		         <value>classpath:boardModel/BoardMapper.xml</value>
	    	</list>
  		</property>
	</bean>
	
	<bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" /> 
	 
	<context:component-scan base-package="guestController"/> 
	<context:component-scan base-package="guestModel"/>
	
	 
	 
	<context:component-scan base-package="memberController"/> 
	<context:component-scan base-package="memberModel"/>
	
    <bean id="multipartResolver"
	 		 class="org.springframework.web.multipart.commons.CommonsMultipartResolver"> 
	   <property name="maxUploadSize"  value="52428800" />
	   <property name="defaultEncoding" value="UTF-8" />
   </bean>  
	<context:component-scan base-package="boardController"/> 
	<context:component-scan base-package="boardModel"/> 
</beans>
